<%= simple_form_for [ @article, @comment ] do |f| %>
  
    <%= f.input :user_id, :as => :hidden, :input_html=>{:value=> current_user.id} if user_signed_in? %>
  
  
    <%= f.input :body, :class=>'form-control', :label=>'Your Comment' %>
  
  
    <%= f.input :media, :class=>'form-control', :label=>'Link' %>
  
  
    <%= f.submit :class=>'btn btn-default btn-block' %>
  
<% end %>
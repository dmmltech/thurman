<div class="sidebar-widget widget">
 <hr/>
    
  <p class="text-center">
	  <% if user_signed_in? %>
	    <% if can? :update, @article %>
	      <%= link_to "Edit", edit_article_path(@article) %>
	    <% end %>  
	    <% if can? :delete, @article %>
	    	<%= link_to "Delete", article_path(@article), method: :delete, data: {confirm: "Really delete the article?"} %> 
	    <% end %>
	  <% end %>
  </p>
</div>
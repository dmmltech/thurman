

<div class="row">
	<div class="col-md-10 offset-md-1 col-sm-12">
		<% breadcrumb :articles, @articles, :style => :bootstrap %>
		<h1 class="text-center"><%= @category.name.capitalize if @category %> Articles
		<%= 'tagged with ' + @tag.name.capitalize if @tag %></h1>
		<p class="text-center"><%= @category.seodescription if @category %></p>
	<hr/>
	<div class="row">
		<% @articles.each do |article| %>
		<div class="col-sm-12 col-md-6 col-lg-4">
		    <%= link_to article_path(article) do %>
		       <div class="card index-card">
					    <%= image_tag article.image.thumb, :class=>"card-img-top img-responsive" %>
					    <div class="card-block">
					      <h4 class="card-title"><%= article.title %></h4>
					    </div>
					  </div>
				<% end %>
				</div>
		<% end %>
	</div>

		<%= will_paginate @articles, renderer: BootstrapPagination::Rails %>
		
	</div>
</div>


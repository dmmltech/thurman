<!DOCTYPE html>
<html>
  <head>
    <title>Thurman</title>
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/css/bootstrap.min.css" crossorigin="anonymous">
     <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
     <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
     <link rel="alternate" type="application/rss+xml"  href="<%= default_url%>feed?format=rss">
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
<header>

    <div class="brand text-center">
      <%= current_page?(root_path) ? '<h1>'.html_safe : '<h2>'.html_safe %>
        <%= link_to site_title, root_path %>
      <%= current_page?(root_path) ? '</h1>'.html_safe : '</h2>'.html_safe %>
       <%= current_page?(root_path) ? '<h2>'.html_safe : '<h3>'.html_safe %>
        <%= site_tagline %>
      <%= current_page?(root_path) ? '</h2>'.html_safe : '</h3>'.html_safe %>
    </div>

    <ul class="nav justify-content-center">
      <% @menupages.sort.each do |parent, children| %>
        <li class="nav-item dropdown">
          <%= link_to parent.title.capitalize, page_path(parent), :class=> "nav-link #{css_class_active_for(page_path(parent))} " , :data=> {:toggle=>'dropdown'} %>
            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              <% for child in children %>
                <%= link_to child.title.capitalize, page_path(child), :class=> "dropdown-item" %>
              <% end %>
            </div>
        </li>
      <% end %>
      <li class="nav-item">
         <%= link_to 'Blog', articles_path, :class=> "nav-link #{css_class_active_for(articles_path)}" %>
      </li>
      <li class="nav-item">
        <%= link_to 'Source', 'https://github.com/dmmltech/thurman', :class=> "nav-link"  %>
      </li>
       <% if has_role?(:admin) %>
       <li class="nav-item">
        <%= link_to 'Manage', editorial_path, :class=> "nav-link #{css_class_active_for(editorial_path)}"  %>
      </li>
      <% end %>
      <% if has_role?(:editor) %>
       <li class="nav-item">
        <%= link_to 'Manage', editorial_path, :class=> "nav-link #{css_class_active_for(editorial_path)}"  %>
      </li>
      <% end %>
      <% if has_role?(:author) %>
       <li class="nav-item">
        <%= link_to 'Manage', editorial_path, :class=> "nav-link #{css_class_active_for(editorial_path)}"  %>
      </li>
      <% end %>
    </ul>

</header>
 <div class="breads">
   <div class="container">
    <%= breadcrumbs pretext: "You are here: ",
          separator: " &rsaquo; ", semantic: true %>
    </div>
</div>

    <div class="container wrapper">
        <p class="flash">
          <%= flash.notice %>
        </p>
     
        <%= yield %>
    </div>

    <footer class="footer text-center text-muted">
     <p> &copy; <%= Time.now.strftime('%Y') %>  <%= site_title %> - Built on Thurman</p>
    </footer>
    <ul class="nav justify-content-center nav-social">
      <li class="nav-item">
        <a class="nav-link active" href="<%= default_twitter %>"><i class="fa fa-twitter"></i></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= default_facebook %>"><i class="fa fa-facebook"></i></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= default_linkedin %>"><i class="fa fa-linkedin"></i></a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="<%= default_instagram %>"><i class="fa fa-instagram"></i></a>
      </li>
    </ul>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js"  crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js" crossorigin="anonymous"></script>

     <script type="text/javascript">
      $(document).ready(function() {
         $("#tags").tagit({
            availableTags: <%=raw auto_suggestions('tags').to_json %>,
            allowSpaces: true
        });
      });

    </script>

  </body>
</html>

<div class="info row ">
	<div class="col-md-12">
		<p class="lead">
			Get updates by email
		</p>
		<%= render partial: 'contacts/form' %>
	</div>
</div>

<% if user_signed_in? %>
<hr/>
	<% if current_user.has_role? :admin %>
	<h3>Mailing List Subscribers</h3>
	<ul>
		<% @contacts.each do |c| %>
			<li><%= c.email %></li>
		<% end %>
	</ul>
	<% end %>
<% end %>
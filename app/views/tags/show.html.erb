<div class="row">
	<div class="col-md-8 offset-md-2 col-xs-12">
		<% breadcrumb :tag, @tag %>

		<h1 class="text-center">Articles Tagged with <%= @tag.name %></h1>

		<div class="list-group items-list">
		  <% @articles.each do |article| %>
			<%= link_to article_path(article), :class=>'list-group-item list-group-item-action lead' do %>
				<%= article.title %>
			<% end %>
		  <% end %>
		</div>
	</div>
</div>
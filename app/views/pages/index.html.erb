<div class="row">
	<div class="col-md-8 offset-md-2 col-xs-12">
		<% breadcrumb :pages, @pages %>
		<h1><%= site_title %>  Pages</h1>

		<ul id="pages">
		  <% @pages.each do |page| %>
		    <li>
		      <%= link_to page.title, page_path(page) %>
		    </li>
		  <% end %>
		</ul>

		<%= will_paginate @pages, renderer: BootstrapPagination::Rails %>
		<% if user_signed_in? %>
			<% if can? :create, @page %>
				<%= link_to "Add new page", new_page_path, :class=>'btn btn-primary' %>
			<% end %>
		<% end %>
	</div>
</div>
